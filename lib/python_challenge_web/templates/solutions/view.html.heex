<style>
    html,
    body {
        height: 100%;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
    }

    #container {
        position: relative;
        display: flex;
        flex-direction: row;
        height: calc(100% - 78px);
        margin-top: 78px;
    }

    #question-panel {
        background-color: azure;
        flex: 1;
        overflow: auto;
        padding: 1rem;
    }

    #solutions-panel {
        flex: 1;
        overflow: auto;
        padding: 1rem;
        background-color: #01a66faa;
        color: white;
    }
    
    #question-panel a {
        text-decoration: underline;
    }

    #pyodide-container {
        position: fixed;
        bottom: 0;
        right: 0;
        width: 50%;
        height: 50%;
        z-index: 1100;
        --size: 1.5;
        --color: rgba(255, 255, 255, 0.8);
    }

    @media (max-width: 768px) {
        #container {
            flex-direction: column;
        }
        #pyodide-container {
            width: 100%;
        }
    }

    #content > :not(:first-child) {
        font-size: 1.5em;
    }

    @keyframes fadeIn { 
      from { opacity: 0; } 
    }

    .loader {
    	position: fixed;
    	left: 0px;
    	top: 0px;
    	width: 100%;
    	height: 100%;
    	z-index: 9999;
      animation: fadeIn 1s infinite alternate;
      background: url(data:image/png;base64,) center no-repeat;
      background-size: 60px 60px;
    }

    .loader-bg {
    	position: fixed;
    	left: 0px;
    	top: 0px;
    	width: 100%;
    	height: 100%;
    	z-index: 200;
      background-color: #01a66f;
    }

    #show-terminal {
        float: right;
        top: 15px;
        right: 20px;
    }

    #close-terminal {
        position: absolute;
        right: 10px;
        top: 10px;
        z-index: 100;
        color: white;
        background-color: black;
        outline: 1px solid white;
        padding: 5px;
        cursor: pointer;
    }

    form {
        display: inline-block;
    }

    hr {
        border: 1px solid white;
    }
